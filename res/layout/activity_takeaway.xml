<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <ProgressBar 
       android:id="@+id/takeaway_firstprogressbar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       
       style="?android:attr/progressBarStyleSmall"
       />
    
    
     <LinearLayout 
        android:id="@+id/takeaway_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/bg_color"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/titlebar"
            >
            <TextView 
                android:id="@+id/takeaway_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="@string/menu"
                />
            <Button 
                android:id="@+id/takeaway_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:paddingLeft="16dip"
                android:paddingRight="10dip"
                android:background="@drawable/back_bg"
                android:drawableRight="@drawable/home_icon"
                />
            
            
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >  
         <TextView 
            android:id="@+id/takeaway_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            
            />
         <TextView 
             android:id="@+id/takeaway_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/takeaway_name"
            android:layout_marginTop="10dp"
             />
         <Button 
             android:id="@+id/takeaway_call"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="5dp"
             android:background="@drawable/text_bg"
             android:text="@string/call"
             android:textColor="@color/white"
             />
         
         </RelativeLayout>   
               <View android:background="#ffa7b5c7" android:layout_width="fill_parent" android:layout_height="1dp"/>
    <View android:background="@color/white" android:layout_width="fill_parent" android:layout_height="1dp"/>
        <ListView 
            android:id="@+id/takeaway_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollingCache="false"
            ></ListView>
        </LinearLayout>
    
    </RelativeLayout>
    